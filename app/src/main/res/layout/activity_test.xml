<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TestActivity"
    tools:viewBindingIgnore="true">

    <com.wlcookies.fundemo.widget.TestView
        android:id="@+id/test_view"
        android:layout_width="200px"
        android:layout_height="200px" />

    <TextView
        android:id="@+id/voice_tv"
        android:layout_width="@dimen/dp_346"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="123456789012345678901234567890123145180238173010000000000"
        android:singleLine="true"
        android:textColor="#ff0000"
        android:textSize="@dimen/sp_24" />

    <com.wlcookies.fundemo.widget.MarqueeTextView
        android:id="@+id/marquee1"
        android:layout_width="@dimen/dp_346"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ff0000"
        android:textSize="@dimen/sp_24"
        app:scroll_first_delay="0"
        app:scroll_interval="9000"
        app:scroll_mode="mode_forever" />

    <Button
        android:id="@+id/test_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/full_screen" />

</androidx.appcompat.widget.LinearLayoutCompat>