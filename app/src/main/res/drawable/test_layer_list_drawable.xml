<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/shape_app_icon_bg" />
    <item
        android:bottom="@dimen/dp_10"
        android:left="@dimen/dp_10"
        android:right="@dimen/dp_10"
        android:top="@dimen/dp_10">
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_200" />
            <corners android:radius="@dimen/dp_10" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/dp_20"
        android:left="@dimen/dp_20"
        android:right="@dimen/dp_20"
        android:top="@dimen/dp_20">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_10" />
            <gradient
                android:angle="90"
                android:endColor="#22000000"
                android:startColor="@color/white"
                android:type="linear" />
        </shape>
    </item>
</layer-list>